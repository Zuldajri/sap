{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "hanaSubnetRef": {
            "type": "string"
        },
	"hanaAdminSubnetRef": {
            "type": "string"
        },
        "operatingSystem": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPublicKey": {
            "type": "securestring"
        },
        "vmSize": {
            "type": "string"
        },
        "ipAllocationMethod": {
            "type": "string"
        },
        "staticIP": {
            "type": "string"
        },
	"adminStaticIP": {
            "type": "string"
        },
        "availSetName": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        }
    },
    "variables": {
        "nicName": "[if (equals(parameters('IPAllocationMethod'),'Static'), concat(parameters('vmName'),'-static-NIC'), concat(parameters('vmName'),'-dynamic-NIC'))]",
	"adminNicName": "[if (equals(parameters('IPAllocationMethod'),'Static'), concat(parameters('vmName'),'-static-admin-NIC'), concat(parameters('vmName'),'-dynamic-admin-NIC'))]",
        "networkSecurityGroupName": "[concat(parameters('vmName'),'-NSG')]",
        "subnetRef": "[parameters('hanaSubnetRef')]",
	"adminSubnetRef": "[parameters('hanaAdminSubnetRef')]",
        "SLES for SAP 15 SP1": 
            {
                "sku": "gen1",
                "offer": "sles-sap-15-sp1",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
        "SLES for SAP 12 SP5": 
            {
                "sku": "gen1",
                "offer": "sles-sap-12-sp5",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
        "SLES for SAP 12 SP4": 
            {
                "sku": "12-SP4",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
        "SLES for SAP 12 SP3": 
            {
                "sku": "12-SP3",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
        "RHEL 7.7 for SAP HANA": 
            {
                "sku": "7.7",
                "offer": "RHEL-SAP-HA",
                "publisher": "RedHat",
                "version": "latest",
                "OSType": "Linux"
            },
        "RHEL 7.6 for SAP HANA": 
            {
                "sku": "7.6",
                "offer": "RHEL-SAP-HA",
                "publisher": "RedHat",
                "version": "latest",
                "OSType": "Linux"
            },
        "RHEL 7.5 for SAP HANA": 
            {
                "sku": "7.5",
                "offer": "RHEL-SAP-HA",
                "publisher": "RedHat",
                "version": "latest",
                "OSType": "Linux"
            },
        "RHEL 7.4 for SAP HANA": 
            {
                "sku": "7.4",
                "offer": "RHEL-SAP-HA",
                "publisher": "RedHat",
                "version": "latest",
                "OSType": "Linux"
            },
        "operatingSystemSpec": {
            "imagePublisher": "[variables(parameters('operatingSystem')).publisher]",
            "imageOffer": "[variables(parameters('operatingSystem')).offer]",
            "sku": "[variables(parameters('operatingSystem')).sku]",
            "version": "latest"
        },

        "diskConfig": "[variables(concat('diskConfig_', parameters('vmSize')))]",
        "diskConfig_Standard_M64s": {
            "shared": 1024,
            "sap": 64,
            "backup": 1024,
            "data1": 512,
            "data2": 512,
            "data3": 512,
            "data4": 512,
            "log1": 256,
            "log2": 256,
            "log3": 256
        },
        "apiVersion": "2015-06-15"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('networkSecurityGroupName')]",
            "apiVersion": "2019-09-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
            }
        },
        {
            "apiVersion": "2019-09-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]"
            ],
            "properties": {
                "enableAcceleratedNetworking": true,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "[parameters('IPAllocationMethod')]",
                            "privateIPAddress": "[parameters('StaticIP')]",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "networkSecurityGroup": {
					"id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('networkSecurityGroupName')))]"
                }
            }
        },
	{
            "apiVersion": "2019-09-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('adminNicName')]",
            "location": "[resourceGroup().location]",
             "dependsOn": [
		"[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]"
            ],
            "properties": {
                "enableAcceleratedNetworking": true,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "[parameters('IPAllocationMethod')]",
                            "privateIPAddress": "[parameters('adminStaticIP')]",
                            "subnet": {
                                "id": "[variables('adminSubnetRef')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
					"id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('networkSecurityGroupName')))]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanashared-01')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').shared]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-usrsap-01')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').sap]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanabackup-01')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').backup]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanadata-01')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').data1]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanadata-02')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').data2]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanadata-03')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').data3]"
            }
        },        
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanadata-04')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').data4]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanalog-01')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').log1]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanalog-02')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').log2]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName'),'-hanalog-03')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('diskConfig').log3]"
            }
        },                            
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('availSetName')]",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 5
            }
        },
        {
            "apiVersion": "2019-07-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
		"[resourceId('Microsoft.Network/networkInterfaces',variables('adminNicName'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanashared-01'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-usrsap-01'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanabackup-01'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-01'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-02'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-03'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-04'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanalog-01'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanalog-02'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanalog-03'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', parameters('availSetName'))]"
            ],
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availSetName'))]"
                  },                
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('operatingSystemSpec').imagePublisher]",
                        "offer": "[variables('operatingSystemSpec').imageOffer]",
                        "sku": "[variables('operatingSystemSpec').sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(parameters('vmName'),'-OsDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "diskSizeGB": 128,
                        "managedDisk": {
                              "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": [
                        {
                            "lun": 1,
                            "createOption": "Attach",
			    "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-01'))]"
                            }
                        },
                        {
                            "lun": 2,
                            "createOption": "Attach",
			    "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-02'))]"
                            }
                        },
                        {
                            "lun": 3,
                            "createOption": "Attach",
			    "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanalog-01'))]"
                            }
                        },
                        {
                            "lun": 4,
                            "createOption": "Attach",
			    "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanalog-02'))]"
                            }
                        },
                        {
                            "lun": 5,
                            "createOption": "Attach",
		            "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanalog-03'))]"
                            }
                        },
                        {
                            "lun": 6,
                            "createOption": "Attach",
			    "caching": "ReadOnly",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanashared-01'))]"
                            }
                        },
                        {
                            "lun": 7,
                            "createOption": "Attach",
			    "caching": "ReadOnly",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanabackup-01'))]"
                            }
                        },
                        {
                            "lun": 8,
                            "createOption": "Attach",
			    "caching": "ReadOnly",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-usrsap-01'))]"
                            }
                        },
			{
                            "lun": 9,
                            "createOption": "Attach",
			    "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-03'))]"
                            }
                        },
                        {
                            "lun": 10,
                            "createOption": "Attach",
			    "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName'),'-hanadata-04'))]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
			    "properties": {
                                "primary": false
                            }
                        },
			            {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('adminNicName'))]",
			    "properties": {
                                "primary": true
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
					"bootDiagnostics": {
						"enabled": true,
						"storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), variables('apiVersion')).primaryEndpoints['blob']]"
					}
				}
            }
        }
    ],
    "outputs": {}
}
