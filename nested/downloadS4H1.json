{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"location": {
			"type": "string",
			"metadata": {
				"description": "Region where the resources should be created in"
			}
		},
		"downloadScriptUrl": {
			"type": "string",
			"metadata": {
				"description": "Deployment script Url"
			}
		},
		"downloadscriptFileName": {
			"type": "string",
			"metadata": {
				"description": "Deployment script file name"
			}
		},
		"adminUsername": {
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Administrator username on all VMs"
			}
		},
    "linuxDeployerVmName": {
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Hana VM Name"
			}
		}
	},
	"variables": {
		"singlequote": "'",
		"resourceGroupName": "[resourceGroup().name]"
	},
	"resources": [{
		"type": "Microsoft.Compute/virtualMachines/extensions",
		"name": "[concat(parameters('linuxDeployerVmName'), '/downloadS4Hana')]",
		"location": "[parameters('location')]",
		"apiVersion": "2019-07-01",
		"properties": {
			"publisher": "Microsoft.Azure.Extensions",
			"type": "CustomScript",
			"typeHandlerVersion": "2.0",
			"autoUpgradeMinorVersion": true,
			"settings": {
				"fileUris": [
					"[parameters('downloadScriptUrl')]"
				]
			},
			"protectedSettings": {
				"commandToExecute": "[concat('bash ', parameters('downloadscriptFileName'), ' \"', parameters('adminUsername'), '\"')]"
			}
		}
	}],
	"outputs": {}
}
